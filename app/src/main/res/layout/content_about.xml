<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="reporting.mvmr.AboutActivity"
    tools:showIn="@layout/activity_about"
    android:background="@drawable/img_generic">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/header_about1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:text="What is Mobile Bullying?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_about1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_about1"
                android:textColor="@color/white"
                android:text="@string/about1" />

            <TextView
                android:id="@+id/header_about2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_about1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:text="What is Mobile Victimisation"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_about2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_about2"
                android:textColor="@color/white"
                android:text="@string/about2" />

            <TextView
                android:id="@+id/header_about3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_about2"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:text="Consequences of Mobile Victimisation"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_about3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_about3"
                android:textColor="@color/white"
                android:text="@string/about3" />

            <TextView
                android:id="@+id/header_about4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_about3"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:text="Mission of MVMR"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_about4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_about4"
                android:textColor="@color/white"
                android:text="@string/about4" />

            <TextView
                android:id="@+id/header_about5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_about4"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:text="Vision"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_about5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_about5"
                android:text="@string/about5"
                android:textColor="@color/white"
                android:paddingBottom="24dp"/>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
